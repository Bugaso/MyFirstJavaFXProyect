<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="salPane" layoutY="35.0" prefHeight="329.0" prefWidth="505.0" stylesheets="@../../../com.bugardo.css/tablesView.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bugardo.controllers.salidaController">
   <children>

      <TableView fx:id="table" editable="false" layoutX="37.0" layoutY="88.0" prefHeight="172.0" prefWidth="281.0">
        <columns>
            <TableColumn fx:id="patColm" editable="false" prefWidth="83.0" reorderable="false" resizable="false" text="Patente" />
            <TableColumn fx:id="fechaColm" editable="false" prefWidth="131.0" reorderable="false" resizable="false" text="Fecha de entrada" />
            <TableColumn fx:id="pagoColm" editable="false" prefWidth="66.0" reorderable="false" resizable="false" text="Pagado" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <Label layoutX="174.0" layoutY="37.0" prefHeight="24.0" prefWidth="158.0" text="Retirar Vehiculo">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font></Label>
       <TextField fx:id="patText" layoutX="340.0" layoutY="88.0" prefHeight="32.0" prefWidth="132.0" stylesheets="@../../../com.bugardo.css/textField.css" text="Ingrese la patente" />
       <Button fx:id="cargarBtn" layoutX="346.0" layoutY="124.0" mnemonicParsing="false" onAction="#buscarVehiculo" prefHeight="25.0" prefWidth="120.0" text="Cargar vehiculo" />

       <Group fx:id="salidaGroup" disable="true" layoutX="5.0" layoutY="3.0">
           <DatePicker fx:id="salidaDate" layoutX="341.0" layoutY="153.0" prefHeight="25.0" prefWidth="120.0" promptText="Fecha de salida">
               <tooltip>
                   <Tooltip fx:id="dateTool" text="Fecha de salida" textAlignment="CENTER" />
               </tooltip>
           </DatePicker>
           <Spinner fx:id="hourText" layoutX="340.0" layoutY="186.0" max="23" min="0" prefHeight="25.0" prefWidth="56.0">
               <tooltip>
                   <Tooltip fx:id="horTool" text="Hora de salida" textAlignment="CENTER" />
               </tooltip>
           </Spinner>
           <Spinner fx:id="minText" layoutX="403.0" layoutY="186.0" max="59" min="0" prefHeight="25.0" prefWidth="57.0">
               <tooltip>
                   <Tooltip fx:id="minTool" text="Minuto de salida" />
               </tooltip>
           </Spinner>

           <Button fx:id="resetBtn" layoutX="437.0" layoutY="221.0" mnemonicParsing="false" onAction="#resetBtn" prefHeight="23.0" prefWidth="25.0" text="X">

               <tooltip>
                   <Tooltip fx:id="restTool" text="Restaurar campos">

                   </Tooltip>
               </tooltip>
           </Button>
           <Button fx:id="sacarBtn" contentDisplay="CENTER" layoutX="340.0" layoutY="221.0" mnemonicParsing="false" onAction="#SacarVehiculo" text="Sacar Vehiculo" />

       </Group>

   </children>
</Pane>
